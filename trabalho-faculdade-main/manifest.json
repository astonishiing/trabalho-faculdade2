{
  "manifest_version": 3,
  "name": "Quick Notes & Reminders",
  "description": "Anote ideias em um clique, sincronize entre dispositivos e receba lembretes com notificações.",
  "version": "1.0.0",
  "minimum_chrome_version": "114",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_popup": "src/popup.html",
    "default_title": "Quick Notes & Reminders"
  },
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "contextMenus"
  ],
  "host_permissions": []
}